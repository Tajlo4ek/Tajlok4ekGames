<Window x:Class="DialogForm.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DialogForm"
        mc:Ignorable="d"
        Title="InputDialog" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="255" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <TextBox x:Name="tbInput" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="224"/>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancel_Click"/>
        <Button x:Name="btnOk" Content="Ок" HorizontalAlignment="Left" Margin="159,38,0,0" VerticalAlignment="Top" Width="75" Click="BtnOk_Click"/>

    </Grid>
</Window>
