<UserControl x:Class="Editor.MyControl.DataControl.TextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.MyControl.DataControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White" Margin="0,10" MinWidth="300">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="up" Click="Up_Click"/>
                <MenuItem Header="down" Click="Down_Click"/>
                <MenuItem Header="delete"  Click="Delete_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
            <TextBox x:Name="rtbData" HorizontalAlignment="Left" Height="150" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="250" Margin="10" TextChanged="RtbData_TextChanged"/>
        </Border>
    </Grid>
</UserControl>
